---
export interface Props {
	widget: string;
	data: string;
}
const { widget, data } = Astro.props;

import Card from './lib/card/Card.astro';

let component = '';

if (widget.includes('card')) {
	component = 'card';
}
---

{
	component == 'card' && (
		<Card widget={widget} data={data}>
            <slot name="raw" slot="raw" />
			<slot />
		</Card>
	)
}
