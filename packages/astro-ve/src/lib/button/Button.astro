---
//*         [BUTTON]
export interface Props {
	widget: string;
	data?: string;
}
const { data, widget } = Astro.props;
let mod = widget.split(':')[1];
import Shutter from './shutter/ShutterButton.astro';
import Slide from './slide/SlideButton.astro';
---

{
	mod == 'shutter' && (
		<Shutter widget={widget} data={data}>
			<slot name="raw" slot="raw" />
			<slot />
		</Shutter>
	)
}

{
	mod == 'slide' && (
		<Slide widget={widget} data={data}>
			<slot name="raw" slot="raw" />
			<slot />
		</Slide>
	)
}
